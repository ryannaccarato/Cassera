<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ryann9309.cassera.Landing.LandingActivity"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/viewPager_LandingActivity_Main">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="8dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/light_grey_dot"
            android:id="@+id/imageView_LandingActivity_Dot_1"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/light_grey_dot"
            android:id="@+id/imageView_LandingActivity_Dot_2"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/light_grey_dot"
            android:id="@+id/imageView_LandingActivity_Dot_3"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/light_grey_dot"
            android:id="@+id/imageView_LandingActivity_Dot_4"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/light_grey_dot"
            android:id="@+id/imageView_LandingActivity_Dot_5"
            android:layout_weight="1" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:text="@string/landingActivity_LoginButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_LandingActivity_Login"
            android:layout_weight="1"
            android:background="@android:drawable/screen_background_light" />

        <Space
            android:layout_height="match_parent"
            android:background="@android:color/black"
            android:layout_width="5dp" />

        <Button
            android:text="@string/landingActivity_FreeTrialButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_LandingActivity_FreeTrial"
            android:layout_weight="1"
            android:background="@android:drawable/screen_background_light" />
    </LinearLayout>
</LinearLayout>
